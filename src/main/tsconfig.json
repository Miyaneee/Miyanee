{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "sourceMap": false,
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "strict": true,
    "isolatedModules": true,
    "types": ["node"],
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,

    "baseUrl": ".",
    "paths": {
      "@@/*": ["../../*"],
      "@/*": ["*"],
      "@shared": ["../shared"]
    }
  },
  "include": ["./**/*.ts", "../../types/**/*.d.ts"]
}
